<p id="notice"><%= notice %></p>

<h1>Listing Ideas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="boxes">
      <div class="boxes-title">
        <img src="">
        コメント待ちアイディア
      </div>
      <% @ideas.each do |idea| %>
          <div class="single-box">
            <%= link_to(image_tag(idea.idea_images.first.url, class: "box_image"), idea)%>
            <p>
              <%= link_to idea.title, idea %>
            </p>
            <p>
              <%= link_to idea.user.username || "不明" , idea%>
            </p>
          </div>
      <% end %>
      <div class="more">
        もっと見る
      </div>
    </div>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= link_to 'Show', idea %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path %>
