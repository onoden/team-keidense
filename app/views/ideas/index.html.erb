<p id="notice"><%= notice %></p>

<h1>Listing Ideas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="boxes">
      <div class="boxes-title">
        <img src="">
        コメント待ちアイディア
      </div>
      <% @ideas.each do |idea| %>
          <div class="single-box">
            <%= image_tag 'http://coliss.com/wp-content/uploads-201501/2015042111-03-04.png' , class: "box_image" %>
            <p>
              <%= idea.title %>
            </p>
            <p>
              <%= idea.user.name%>
            </p>
          </div>
      <% end %>
    </div>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= link_to 'Show', idea %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path %>
